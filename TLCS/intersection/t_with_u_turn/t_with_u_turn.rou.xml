<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Define a vehicle type -->
    <vType id="car"
           accel="1.0"
           decel="4.5"
           sigma="0.5"
           length="5.0"
           maxSpeed="13.9"
           color="1,1,0"/>

    <!-- ==========================================================
         ROUTE DEFINITIONS
         The following routes cover straight paths, turns, and U-turns.
         ========================================================== -->

    <!-- Straight movement from left to right -->
    <route id="r0" edges="left_to_center center_to_right"/>

    <!-- Straight movement from right to left -->
    <route id="r1" edges="right_to_center center_to_left"/>

    <!-- Turn movement: from left to down -->
    <route id="r2" edges="left_to_center center_to_down"/>

    <!-- Turn movement: from down to left -->
    <route id="r3" edges="down_to_center center_to_left"/>

    <!-- Turn movement: from right to down -->
    <route id="r4" edges="right_to_center center_to_down"/>

    <!-- Turn movement: from down to right -->
    <route id="r5" edges="down_to_center center_to_right"/>

    <!-- U-turn movement: from left to left (via center) -->
    <route id="r6" edges="left_to_center center_to_left"/>

    <!-- U-turn movement: from right to right (via center) -->
    <route id="r7" edges="right_to_center center_to_right"/>

    <!-- ==========================================================
         FLOW DEFINITIONS
         These flows automatically inject vehicles along the defined routes.
         ========================================================== -->

    <!-- Flow along the straight left to right route -->
    <flow id="flow0" type="car" route="r0" begin="0" end="300" vehsPerHour="200"/>

    <!-- Flow along the straight right to left route -->
    <flow id="flow1" type="car" route="r1" begin="0" end="300" vehsPerHour="200"/>

    <!-- Flow for turning from left to down -->
    <flow id="flow2" type="car" route="r2" begin="0" end="300" vehsPerHour="100"/>

    <!-- Flow for turning from down to left -->
    <flow id="flow3" type="car" route="r3" begin="0" end="300" vehsPerHour="100"/>

    <!-- Flow for turning from right to down -->
    <flow id="flow4" type="car" route="r4" begin="0" end="300" vehsPerHour="100"/>

    <!-- Flow for turning from down to right -->
    <flow id="flow5" type="car" route="r5" begin="0" end="300" vehsPerHour="100"/>

    <!-- Flow for U-turn from left (left-to-center and back to left) -->
    <flow id="flow6" type="car" route="r6" begin="0" end="300" vehsPerHour="50"/>

    <!-- Flow for U-turn from right (right-to-center and back to right) -->
    <flow id="flow7" type="car" route="r7" begin="0" end="300" vehsPerHour="50"/>

</routes>
